# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[**]
indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 4

[*.js]
[*.json]
[*.md]
[*.markdown]
[*.ts]
indent_style = space
indent_size = 2

[*.php]
[pakefile]
indent_size = 4

[*.scss]
indent_style = space
indent_size = 4
